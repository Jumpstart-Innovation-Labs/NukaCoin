<shortcuts>
	<skipIfNotSupported/>
	<defaultCurrentUser/>
	<programGroup defaultName="NukaCoin" location="startMenu"/>
	<shortcut
		name="NukaCoin Server"
		target="$INSTALL_PATH\NukaCoin.exe"
		commandLine=""
		workingDirectory="$INSTALL_PATH"
        description="Start NukaCoin server"
		iconFile="$INSTALL_PATH\html\www\favicon.ico"
        iconIndex="0"
        initialState="normal"
        programGroup="yes"
		desktop="yes"
        applications="no"
        startMenu="no"
		startup="no"
		runAsAdministrator="true">
